<div class="py-4">
    <h2>Registro</h2>
    <hr class="w-50 mx-auto" />

    <form action="/skaters" method="POST" enctype="multipart/form-data">
        <div class="form-group row w-50 m-auto g-4">
            <div class="form-group col-12 col-sm-6">
                <label>Email</label>
                <input class="form-control m-auto" name="email" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Nombre</label>
                <input class="form-control m-auto" name="nombre" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Password</label>
                <input class="form-control m-auto" type="text" name="password" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Repita la password</label>
                <input class="form-control m-auto" type="text"/>
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Años de experiencia</label>
                <input class="form-control m-auto" name="anos_experiencia" />
            </div>
            <div class="form-group col-12 col-sm-6">
                <label>Especialidad</label>
                <input class="form-control m-auto" name="especialidad" />
            </div>
            <div class="form-group col-12 col-sm-12 my-4">
                <label>Foto de perfil</label>
                <input class="text-warning mx-2" type="file" name="foto" required/>
            </div>
        </div>
        <button class="btn btn-warning my-3 ">Registrarme</button>
        <p><a class="text-light my-4 text-decoration-underline" href="/login"> Iniciar sesión</a></p>
    </form>
</div>