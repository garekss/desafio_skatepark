<div class="py-5">
  <h2>Iniciar Sesión</h2>
  <hr class="w-50 mx-auto" />

  <form>
    <div class="form-group w-50 mx-auto">
      <div class="form-group my-3">
        <label>Email</label>
        <input class="form-control w-50 m-auto" />
      </div>
      <div class="form-group my-3">
        <label>Password</label>
        <input class="form-control w-50 m-auto" type="password" />
      </div>
    </div>
    <button class="btn btn-warning my-3">Ingresar</button>
    <p>¿Aún no tienes cuenta? <a class="text-warning text-decoration-underline" href="/registro">Regístrate</a></p>
  </form>
</div>

<script>

  const form = document.querySelector("form")

  form.addEventListener("submit", async (e) => {
    e.preventDefault()

    let [email, password] = document.querySelectorAll("input")

    email = email.value
    password = password.value

    try {
      const { data: token } = await axios.post("/login", { email, password })
      window.location = `/Perfil?token=${token}`
    } catch ({ response }) {
      const { data } = response
      const { error } = data
      alert(error)
    }

  })
</script>